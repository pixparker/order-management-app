{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "rootDir": "./",
      "outDir": "./build",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
    },
    "exclude": [
      "./tests/",
      "./node_modules/",
      "./dist/"
    ],
}
